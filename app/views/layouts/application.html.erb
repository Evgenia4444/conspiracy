<!DOCTYPE html>
<html>
  <head>
    <title>Conspiracy</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    
  </head>

  <body>
  <div class="top-menu">
    <h3 class='logo'>Квазоид</h3>
      <div class="navbar_actions">
        <div class='myaccount_icon'>
      <% if user_signed_in? %>
        <p><%= link_to 'Мой аккаунт', current_user %> | <%= link_to 'Выйти', destroy_user_session_path, method: :delete %></p></div>
      <% else %>
        <button class='signin_button'><%= link_to 'Sign In', new_user_session_path %></button> 
        <button class='signup_button'><%= link_to 'Sign Up', new_user_registration_path %></button>
      </div>
      <% end %>
</div>

    <% if notice %>
  <p class="notice"><%= notice %></p>
<% elsif alert %>
  <p class="alert"><%= alert %></p>
<% end %>
<%= yield %>
  </body>
</html>
